@{
    ViewData["Title"] = "Simular Período";
}

    <div ng-app="appSimularPeriodo" ng-controller="SimularPeriodoController">
        <button class="btn-success" ng-click="SimularPeriodo()">Simular Período</button>
        <hr />
        <div class="alert alert-success" role="alert" ng-show="enableSuccessDialog">
            {{sMessage}}
        </div>
        <div class="alert alert-danger" role="alert" ng-show="enableErrorDialog">
            {{sMessage}}
        </div>
        <table>
            <thead>
            <th>Aluno</th>
            <th>Turma</th>
            <th>Matéria</th>
            <th>Nota AV1</th>
            <th>Nota AV2</th>
            <th>Nota AV3</th>
            <th>Nota Final (Media Ponderada)</th>
            <th>Resultado</th>
            </thead>
            <tbody>
                <tr ng-repeat="res in gridMateriaData">
                    <td data-column="Aluno">{{res.nmAluno}}</td>
                    <td data-column="Turma">{{res.nmTurma}}</td>
                    <td data-column="Matéria">{{res.nmMateria}}</td>
                    <td data-column="Nota AV1">{{res.notaAV1}}</td>
                    <td data-column="Nota AV2">{{res.notaAV2}}</td>
                    <td data-column="Nota AV3">{{res.notaAV3}}</td>
                    <td data-column="Nota Final (Media Ponderada)">{{res.notaFinal}}</td>
                    <td data-column="Resultado">{{res.resultado}}</td>
                </tr>
            </tbody>
        </table>
    </div>

<script src="~/js/Periodo/jsSimularPeriodo.js"></script>

